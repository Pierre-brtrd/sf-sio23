{% extends "base.html.twig" %}

{% block title %}
	Admin des articles
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Administration des articles</h1>
		<a href="{{ path('admin.article.create') }}" class="btn btn-primary">
			<i class="bi bi-plus"></i>
			Cr√©er un article
		</a>
		<div class="mt-4 row align-items-center justify-content-between">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card">
						<div class="card-body">
							<h2 class="card-title">{{ article.title }}</h2>
							<p class="card-text">{{ article.content|slice(0, 100) ~ '...' }}</p>
							<div class="row">
								<div class="col-md-6">
									<a href="{{ path('admin.article.update', {id: article.id}) }}" class="btn btn-warning">Modifier</a>
								</div>
								<div class="col-md-6">
									{% include 'Backend/Article/_formDelete.html.twig' %}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
