{{ form_start(form) }}

{% if form.firstName is defined and form.lastName is defined and form.email is defined %}
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.firstName) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.lastName) }}
		</div>
	</div>
	{{ form_row(form.email) }}
{% endif %}

{% if form.roles is defined %}
	{{ form_row(form.roles) }}
{% endif %}

<div class="text-center">
	<button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>

{{ form_end(form) }}
