{% extends 'base.html.twig' %}

{% block title %}
	Modification d'une categorie
	{{ parent() }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('admin') }}
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="card p-3 w-75 mx-auto">
			<h1 class="text-center">Modifier une catégorie</h1>

			{{ include('Backend/Categorie/_form.html.twig', {'button_label': 'Modifier'}) }}

			<div class="d-flex gap-4">
				<a href="{{ path('admin.categorie.index') }}" class="btn btn-warning">Retour à la liste</a>
				{{ include('Backend/Categorie/_delete_form.html.twig') }}
			</div>
		</div>
	</section>
{% endblock %}
