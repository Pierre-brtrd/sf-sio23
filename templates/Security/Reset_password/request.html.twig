{% extends 'base.html.twig' %}

{% block title %}
	Reinitialisez votre mot de passe
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}

		<div class="card p-3 w-75 mx-auto">
			<h1 class="text-center">Reinitialisez votre mot de passe</h1>
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small>
					Entrez une adresse email existante et nous vous enverrons un email pour reinitialiser votre mot de passe.
				</small>
			</div>

			<button class="btn btn-primary mt-2">
				<i class="bi bi-envelope-at"></i>
				Reinitialisez votre mot de passe
			</button>
			{{ form_end(requestForm) }}
		</div>
	</section>
{% endblock %}
