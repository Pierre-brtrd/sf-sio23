<div class="card-comment">
	<div class="card-comment-header">{{ comment.title }}</div>
	<div class="card-comment-content">
		<em class="card-text">{{ comment.user.fullName }}</em>
		<p class="card-text">{{ comment.content }}</p>
		<div class="card-comment-ratings">
			{% for number in range(1, 5) %}
				{% if number <= comment.grade %}
					<i class="bi bi-star-fill"></i>
				{% else %}
					<i class="bi bi-star"></i>
				{% endif %}
			{% endfor %}
		</div>
		<p class="card-text">
			<small class="text-muted">{{ comment.createdAt|ago }}</small>
		</p>
	</div>
</div>
