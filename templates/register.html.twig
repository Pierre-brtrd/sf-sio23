{% extends "base.html.twig" %}

{% block title %}
	Création de compte
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<div class="card p-3 w-50 mx-auto">
			<h1 class="text-center">Création d'un compte</h1>
			{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.firstName) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.lastName) }}
				</div>
			</div>

			{{ form_widget(form) }}

			<div class="text-center">
				<button type="submit" class="btn btn-primary">S'inscrire</button>
			</div>
			{{ form_end(form) }}
			<a href="{{ path('app.login') }}" class="btn btn-link text-start text-muted mt-4">Vous avez déjà un compte ? Connectez-vous</a>
		</div>
	</section>
{% endblock %}
